datasource db {
      provider = "mysql"
      url      = env("DATABASE_URL")
    }
  
    generator client {
      provider = "prisma-client-js"
    }
  
    model StudentClass {
  id String @id @default(uuid())
  name String
  level String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(uuid())
  username String
  email String @unique
  phoneNumber String @unique
  password String
  dateJoined DateTime @default(now())
  updatedAt DateTime @updatedAt
}